$('.events').each(function(i)
{
    if ($(this).attr('id') === '<%= @event.id %>') {
      
      let popup = $(this).find(".comments-popup");
      popup.toggleClass("popup-comments-hide");
      if (popup.length) {
        popup.find(".comments-popup__container").addClass('popup-display')
        popup.html("<%= j render partial: 'comment' %>")
      }
    }
});

